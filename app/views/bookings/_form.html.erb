
<div class="container">
  <div>
  <h1>Rent a deck</h1>
  <h2><%= @deck.title %></h2>

  <div class="row">

    <div class="col-6">
      <img src="" alt="">
    </div>

    <div class="col-6">
      <%= simple_form_for [@deck, @booking], data: { insert_in_list_target: "form" } do |f| %>
      <%= f.input :date_of_beginning,
              as: :string,
              input_html: { data: { controller: "datepicker" } } %>
      <%= f.input :date_of_end,
              as: :string,
              input_html: { data: { controller: "datepicker" } } %>
      <%# f.input :date_of_beginning, as: :date %>
      <%# f.input :date_of_end, as: :date %>

      <div class="btn btn-primary">
        <%= f.button :submit %>
      </div>

    </div>
    <% end %>
  </div>
  <div>
  </div>
    <h2>Decks cards</h2>
      <ul>
        <% @deck.cards.each do |card| %>
          <li><%= cl_image_tag card.photo.key %></li>
        <% end %>
      </ul>

