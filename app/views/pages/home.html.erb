
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%=asset_path('1.jpg') %>);">
  <div class="container">
    <%= cl_image_tag("pokebnb-logo", width: 200, height: 100, crop: :fill) %>
    <p>Loue ton deck, domine les tournois.</p>
    <div class="button-container">
      <%= link_to "Louer un deck", decks_path, class: "btn btn-flat" %>
      <a class="btn btn-flat" href="#">Mettre en location</a>
    </div>
  </div>
</div>

