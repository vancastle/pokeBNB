<div class="container container-deck">


    <div class="container">
      <div class="col-sm-12 col-md-10 col-lg-8 my-3">
        <div class="d-flex justify-content-between align-items-center mt-3">
          <div>
            <%= link_to "Back", root_path, class: "btn btn-flat" %>
          </div>
          <div class="d-flex" style = "padding-left: 710px;">
            <%= form_with url: decks_path, method: :get, class: "d-flex" do %>
              <%= text_field_tag :query, params[:query], class: "form-control btn-flat2-input" , placeholder: "Find a deck" %>
              <%= submit_tag "Search", name: "", class: "btn btn-flat2 ms-3" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>


  <div class="row justify-content-center">
    <% @decks.each do |deck| %>
      <div class="col-sm-4 my-3">
        <div class="card h-100 card-trip2">
          <%= link_to deck_path(deck) do %>
            <%= cl_image_tag deck.photo.key, class: "card-img-top" %>
          <% end %>
          <div class="card-body ">
            <h5 class="card-title"><%= deck.title %></h5>
          </div>
          <div class="card-footer card-trip-creator">
            <small class="text-body-secondary">Created by: <%= deck.user.username %></small>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>

<%# style="max-width: 1200px; margin: 0 auto;" %>
