<div class="form-container" style="background-image: url('<%= image_path('pokeball.jpeg') %>'); background-size: cover; background-position: center;">
  <h2 style="background-color: transparent; color: black; font-size: 2em;"><strong>Welcome, Trainer!</strong></h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  label_html: { style: "font-weight: bold;" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  label_html: { style: "font-weight: bold;" } %>
      <%= f.input :remember_me, as: :boolean, label_html: { style: "font-weight: bold;" } if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions" style="text-align: center;">
      <%= f.button :submit, "Log in", class: "btn-flat" %>
    </div>
    <% end %>

    <div class="extra-links" style="display: flex; flex-direction: column; align-items: center;">
    <%= render "devise/shared/links" %>
    </div>
  </div>


<style>
  .form-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100vh;
    padding-top: 20px; /* Optional: Add some padding from the top */
  }

  .extra-links {
    margin-top: 10px;
    display: flex;
    gap: 10px;
  }
</style>
